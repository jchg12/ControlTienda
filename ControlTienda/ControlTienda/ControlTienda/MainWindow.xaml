<Window x:Class="ControlTienda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlTienda"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="300">
    <StackPanel IsEnabled="True" Visibility="Visible" >
        <TextBox x:Name="tbUserName" Margin=" 20,40,20,40" Height=" 40"/>
        <TextBox x:Name="tbPassword" Margin=" 20,0,20,40" Height=" 40" />
        <Button x:Name="btnAceptar" Content=" Aceptar" Margin="15,20,15,20 " Click="btnAceptar_Click"/>
        <Button x:Name="btnCancelar" Content=" Cancelar" Margin=" 15,0,15,20"/>
    </StackPanel>
</Window>
